pipeline {
  agent any

  stages {
    stage('Deploy to K8s') {
      steps {
        withKubeConfig([credentialsId: 'kube-config']) {
          bat 'kubectl get deployment'
          bat 'kubectl delete deployment/seatbooking-deployment'
          bat 'kubectl delete service/seatbooking-service'
          bat 'kubectl create -f ./deployment.yaml'
        }
      } 
    }
  }
}
